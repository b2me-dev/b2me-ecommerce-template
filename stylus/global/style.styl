/* ------------- Start: Variables ------------- */
// Colors
accent-color 		= #EB9E99
dark-color 			= #412624
default-text-color 	= #000
site-background 	= #fff

// Sizes
default-font-size 	= 16px
site-line-height 	= 1

// Fonts
paragraph-font 	= 'Lato', sans-serif;
subheading-font = 'Cormorant', serif;
cursive-font	= 'Mrs Saint Delafield', cursive;

// Extras
innerpage-banner = url('/wp-content/uploads/2023/05/products-banner-3.jpg');

/* ------------- End: Variables ------------- */

/* ------------- Start: Layout ------------- */
* 
	box-sizing: border-box;
	
*::before,
*::after
	box-sizing: inherit;

#page
	overflow hidden

section
	position relative
	padding: 64px 0

.b2-bg-accent-color
	background-color: accent-color
	
.b2-inner-content
	width: 85.31%;
	max-width: 1630px
	margin: 0 auto

/* ------------- End: Layout ------------- */

/* ------------- Start: Textography ------------- */
h1
h2
h3:not(#ship-to-different-address)
h4
h5
h6
	font-family: paragraph-font
	font-weight: 300
	color: dark-color
	text-transform: uppercase
	margin: 16px 0 0
	clear: both;

	span
		display: block
		font-family: cursive-font
		color #D89090
		letter-spacing: 0
		font-weight: normal
		text-transform: initial
		font-size: 136%

h1
	font-size: 4.375rem
	font-weight: 400

h2
	font-size: 2.5rem
	letter-spacing: 0.1em

h3
	font-size: 1.75rem

h4
	font-size: 1.625rem

h5
	font-size: 1.25rem

h6
	font-size: 1.125rem

p
.b2-paragraph
	color: inherit
	font-family: paragraph-font
	font-size: 16px
	font-weight: 400
	line-height: 1.5
	margin: 16px 0

.b2-text-accent-color
	color: accent-color

.b2-title-font
	font-family: paragraph-font

.b2-paragraph-font
	font-family: paragraph-font

/* ------------- End: Textography ------------- */

/* ------------- Start: Image ------------- */

.post-thumbnail
	float: left
	max-width: 300px
	margin: 0 16px 16px 0

/* ------------- End: Image ------------- */

/* ------------- Start: Links ------------- */
a
	color: #4169e1;
	text-decoration: none;
	background-color: transparent;
	transition: all .2s ease-in;

	&:hover
		opacity: .8

.b2-link
.wc-proceed-to-checkout a
	display inline-block
	font-size: 1rem
	color: #fff
	text-transform: uppercase
	text-align: center
	letter-spacing: 0.1em
	padding: 1em
	margin: 16px 0
	border: 1px solid accent-color
	background-color: accent-color

	&.checkout-button:hover
		color: accent-color
		border-color accent-color

	&.bordered
		border-color: #fff
		background-color: transparent

		&:hover
			border-color: accent-color
			background-color: accent-color

	&:hover
		background-color: transparent
		color: #fff
		border-color: #fff
		opacity 1

p#breadcrumbs a
	color: accent-color

.page-links
	clear: both;
	margin: 0 0 1.5em;

.nav-links
	display: flex
	justify-content: space-between

.b2-social
	position: relative
	display: flex
	align-items: center
	justify-content: center
	font-size: 14px
	color: #fff
	text-align: center
	width: 38px
	height: 38px
	border: 1px solid #fff

.b2-btt-toggle
	position: fixed
	bottom: 30px
	right: 30px
	opacity: 0
	pointer-events: none
	z-index: 100

	&.is-visible
		opacity: 1
		pointer-events: auto

	a
		position: relative
		display: inline-block
		font-size: 18px
		color: #fff
		text-align: center
		width: 50px
		height: 50px
		padding: 16px 0
		background: accent-color
		border-radius: 50%

.b2-mob-phone
	position: fixed
	bottom: 30px
	right: 30px
	z-index: 100

	a
		position: relative
		display: inline-block
		font-size: 18px
		color: #fff
		text-align: center
		width: 50px
		height: 50px
		padding: 16px 0
		background: accent-color
		border-radius: 50%

/* ------------- End: Links ------------- */

/* ------------- Start: Forms ------------- */

form
	input[type=text],
	input[type=email],
	input[type=tel],
	input[type=url],
	input[type=search],
	select,
	textarea
		appearance: none
		outline: none
		display: block
		font-family: paragraph-font
		width 100%
		height: 50px
		padding: 0 8px
		border: 1px solid #d3d3d3
		border-radius: 3px

	textarea
		min-height 100px
		padding: 8px
		resize: none

	button
	input[type=submit]
		display: block
		padding: 16px 0
		min-width: 320px
		font-size: 18px
		color: #fff
		background-color: accent-color
		cursor: pointer
		border: none
		transition: all .2s ease-in

		&:hover
			opacity .7

	.select2-container--default
		.select2-selection--single
			padding: 10px 0
			height: auto

		.select2-selection__arrow
			top 50% !important
			transform: translateY(-50%)

	label.woocommerce-form__label.woocommerce-form__label-for-checkbox.checkbox span
		font-size: 16px
		
/* ------------- End: Forms ------------- */

/* Inner Page */
.single-post main#primary,
.page-template-default main#primary,
.page-template-template-default-nobanner main#primary,
.archive main#primary
.error404 main#primary
	max-width: 85.31%;
	margin: 0 auto
	padding: 0 15px

.page-template-template-fullwidth
	main#primary
		max-width: 100%
		padding: 0

main#primary
	min-height: 500px

div#comments
	display: none

.entry-meta
.entry-footer
	margin-bottom: 16px

.page-content .wp-smiley,
.entry-content .wp-smiley,
.comment-content .wp-smiley
	border: none;
	margin-bottom: 0;
	margin-top: 0;
	padding: 0;

.widget {
	margin: 0 0 1.5em;
}

.widget select {
	max-width: 100%;
}
.comment-content a {
	word-wrap: break-word;
}

.bypostauthor {
	display: block;
}

.post,
.page {
	margin: 0;
}

.updated:not(.published) {
	display: none;
}

.page-content,
.entry-content,
.entry-summary {
	margin: 1.5em 0 0;
}

.screen-reader-text {
	border: 0;
	clip: rect(1px, 1px, 1px, 1px);
	clip-path: inset(50%);
	height: 1px;
	margin: -1px;
	overflow: hidden;
	padding: 0;
	position: absolute !important;
	width: 1px;
	word-wrap: normal !important;
}

.screen-reader-text:focus {
	background-color: #f1f1f1;
	border-radius: 3px;
	box-shadow: 0 0 2px 2px rgba(0, 0, 0, 0.6);
	clip: auto !important;
	clip-path: none;
	color: #21759b;
	display: block;
	font-size: 0.875rem;
	font-weight: 700;
	height: auto;
	left: 5px;
	line-height: normal;
	padding: 15px 23px 14px;
	text-decoration: none;
	top: 5px;
	width: auto;
	z-index: 100000;
}
.wp-caption {
	margin-bottom: 1.5em;
	max-width: 100%;
}

.wp-caption img[class*="wp-image-"] {
	display: block;
	margin-left: auto;
	margin-right: auto;
}

.wp-caption .wp-caption-text {
	margin: 0.8075em 0;
}

.wp-caption-text {
	text-align: center;
}

/* ------------- End: Helpers ------------- */

/* ------------- Start: Shortcode ------------- */
.b2-hp-banner
	position relative

	.b2-hp-banner-slide-item
		position relative

		&::before
			content: ""
			position absolute
			top: 0
			left: 0
			width 100%
			height: 100%
			background-color: #000
			opacity: .3
			pointer-events: none
			z-index 1

		canvas
			display: block
			width: 100%
			min-height 300px
			background-size: cover
			background-repeat: no-repeat
			background-position: center

		> div
			position absolute
			top: 50%
			left: 50%
			transform: translate(-50%, -50%)
			width: 85.31%
			z-index 2

	.b2-hp-banner-arrows
		position absolute
		top: 50%
		left: 50%
		transform: translate(-50%, -50%)
		width: 95.31%
		pointer-events: none
		z-index 2

		span
			font-size: 64px
			color: #fff
			cursor: pointer
			pointer-events: auto
			transition: all .3s ease-in-out

			&.next
				float: right

			&:hover
				color: accent-color

	.b2-hp-banner-dots
		position absolute
		bottom: 64px
		left: 0
		width 100%
		text-align: center
		z-index 2

		ul
			li
				display: inline-block
				vertical-align: top
				margin: 0 8px

				&.slick-active
					button
						background-color: accent-color

				button
					font-size: 0
					padding: 0
					border: none
					width: 16px
					height: 16px
					background-color: #fff
					border-radius: 50%
					cursor: pointer

.b2-partners
	position relative

	.b2-partners-slide
		.b2-partners-item
			position relative
			padding: 0 15px
			
			a
				display: block

				&.no-link
					pointer-events: none

				img
					max-height 200px
					margin: 0 auto;

					&.light
						filter: brightness(0) invert(1)

					&.dark
						filter: brightness(0)

.page .b2-sitemap
	line-height: 1.5
	list-style disc
	margin-left: 32px

	> li
		margin-bottom: 8px

		> a
			margin-bottom: 12px

	ul
		list-style disc
		padding-left: 16px
		margin: 8px 0 0 0

.b2-faq-item
	position relative
	margin-bottom: 30px

	.b2-faq-item-q
		position relative
		background-color: #fff
		border-radius: 6px
		padding: 16px
		cursor: pointer
		box-shadow: 0 0 12px #ddd
		transition: all .4s ease-in-out

		&.tab-close
			i
				transform: rotate(180deg);
				transform-origin: 6px 4px

		&:hover
			opacity .8

		i
			position absolute
			top: 50%
			right: 16px
			transform: translateY(-50%)
		
	.b2-faq-item-a
		display: none
		padding: 16px

.b2-blog-item
	position relative
	margin-bottom: 30px

	a
		display: block
		color: inherit

		.b2-blog-item-image
			canvas
				display: block
				width 100%
				background-size: cover
				background-position: center
				background-repeat: no-repeat

		.b2-blog-item-details
			position relative

			span
				min-width auto

/* ------------- End: Shortcode ------------- */

/* ------------- Start: Mobile Header ------------- */
.b2-mh-wrap 
	font-size: 0
	position fixed
	top: 0
	left: 0
	width 100%
	z-index: 100
	padding: 12px 16px
	background-color: #fff
	box-shadow: 0 0 12px #6c6c6c

	.b2-mh-top-bar-col
		display: inline-block
		vertical-align: middle
		width: 50%

		&.col-logo
			img
				max-height: 55px

		&.col-menu
			> a
				font-size: 19px
				color: #fff
				width: 50px
				height: 50px
				display: flex
				align-items: center
				justify-content: center
				padding: 6px 0
				background-color: accent-color
				border-radius: 50%
				margin-left: auto

			#mobilenav
				position absolute
				top: 100%
				left: 0
				width 100%
				padding: 0
				background-color: #fff
				display: none

				> li
					background-color: #fff

					&:nth-child(odd)
						background-color: #f3f3f3

					&.menu-item-has-children > a::after
						content: "\f106"
						font-family: "Font Awesome 6 Free"
						font-size: 20px
						font-weight: 900;
						color: accent-color
						position absolute
						top: 50%
						right: 16px
						transform: translateY(-50%) rotate(180deg)

					> a
						position relative
						display: block
						font-size: 16px
						color: #000
						text-align: center
						padding: 16px 0

						&.active-link
							color: #fff
							background-color: accent-color
							opacity 1

							&::after
								color: #fff
								transform: translateY(-50%) rotate(0deg)

					.sub-menu
						display none
						padding: 0

						li
							background-color: accent-color

							&:nth-child(odd)
								opacity .9
							a
								position relative
								display: block
								font-size: 16px
								color: #fff
								text-align: center
								padding: 16px 0

/* ------------- End: Mobile Header ------------- */

